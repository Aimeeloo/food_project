<div class="section_my_cart">
  <div class="container-fluid container_my_cart">
    <div class="row no-gutters justify-content-center row_cart_show">

      <div class="col col-lg-8 col-md-10 col-ms-10 col-10 col_cart_show">
         <div class="my_cart m-5">
          <h1>我的購物車</h1>
        </div>
      </div>

      <div class="col col-lg-8 col-md-10 col-ms-10 col-10 col_cart_show">
        <div class="cart_item m-5">
          <% @cart_foods.each do |cart_food| %>
            
            <p><%= cart_food.food.title%></p>
            <p>提貨時間 <%= I18n.l(cart_food.food.pickup_time, formats: :default) %> ～    <%= I18n.l(cart_food.food.pickup_time, formats: :default) %>
            </p>
            <div class="carts_show_price">
              <span>＄<%= cart_food.food.discount_price%></span>
              <del>原價<%= cart_food.food.origin_price%></del>
              數量：<%= cart_food.quantity%>
            </div>

            <div class="text-right">
              <%= link_to "刪除", cart_path(cart_food.food.id), method: 'delete', class: 'btn btn-danger btn_del mb-6', data:{confirm: '確定要刪除嗎？'} %>
            </div>

          <%end%> 
        </div>
      </div>

      <div class="col col-lg-8 col-md-10 col-ms-10 col-10 col_cart_show">
        <div class="text-right mb-5 mr-5">
          <%if @current_cart%>
            <%= link_to "清空購物車", destroy_cart_cart_path, method: 'delete', class: 'btn btn-danger', data:{confirm: '確定要清空嗎？'} %>
          <%end%>
          <%= link_to "結帳", checkout_cart_path, class:'btn btn-success' %>
        </div>
      </div>
      
    </div>  
  </div>
</div>
<%= render 'shared/frontend/footer' %>


