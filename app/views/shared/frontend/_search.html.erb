<!--- title --->
<div class="content_title">
  <div class="row pt-1 pb-1">
    <div class="col-lg-12">
      <h1 class="text-center">Carousel with Three input search</h1>
      <h6 class="text-center">awesome responsive image slider with search bar</h6>
    </div>
  </div>
</div>

<!--- search & add_new_btn --->
<div class="content_search">
  <input class="form-control" type="search" placeholder="Search" aria-label="Search">
  <button class="btn btn-outline-success" type="submit">Search</button>
  <%= link_to "新增po文", new_food_path, class:'btn btn-primary new_btn'%>
</div>

<!--- image --->
<div class="content_img">
    <div class="row">
      <div class="col-12 pb-5">
        <section class="row">
          <div class="col-12 col-md-6 pb-0 pb-md-3 pt-2 pr-md-1">
            <div id="featured" class="carousel slide carousel" data-ride="carousel">

              <ol class="carousel-indicators top-indicator">
                  <li data-target="#featured" data-slide-to="0" class="active"></li>
                  <li data-target="#featured" data-slide-to="1"></li>
                  <li data-target="#featured" data-slide-to="2"></li>
              </ol>

                <!-- carousel image -->
              <div class="carousel-inner">

                <div class="carousel-item active">
                  <div class="card border-0 rounded-0 text-light overflow zoom">
                    <div class="position-relative">
                      <div class="ratio_left-cover-1 image-wrapper">
                        <img class="img-fluid w-100" src="https://bootstrap.news/source/img1.jpg" alt="Image description">
                      </div>
                    </div>
                  </div>
                </div>
                  
                <div class="carousel-item">
                  <div class="card border-0 rounded-0 text-light overflow zoom">
                    <div class="position-relative">
                      <div class="ratio_left-cover-1 image-wrapper">
                        <img class="img-fluid w-100" src="https://bootstrap.news/source/img2.jpg" alt="Image description">
                      </div>
                    </div>
                  </div>
                </div>
                  
                <div class="carousel-item">
                  <div class="card border-0 rounded-0 text-light overflow zoom">
                    <div class="position-relative">
                      <div class="ratio_left-cover-1 image-wrapper">
                        <img class="img-fluid w-100" src="https://bootstrap.news/source/img3.jpg" alt="Image description">
                      </div>
                    </div>
                  </div>
                </div>
                  
                <div class="carousel-item">
                  <div class="card border-0 rounded-0 text-light overflow zoom">
                      <div class="position-relative">
                        <div class="ratio_left-cover-1 image-wrapper">
                          <img class="img-fluid w-100" src="https://bootstrap.news/source/img4.jpg" alt="Image description">
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
            <a class="carousel-control-prev" href="#featured" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#featured" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
          </div>
          <!-- End carousel image -->
          
          <!-- four image -->
          <div class="col-12 col-md-6 pt-2 pl-md-1 mb-3 mb-lg-4">
            <div class="row">

              <div class="col-6 pb-1 pt-0 pr-1">
