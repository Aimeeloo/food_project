<h1>結帳</h1>
<% @cart_foods.each do |cart_food| %>
  <ul>
    <li>
      <%= link_to User.find_by(id: cart_food.food.user_id).name, "#" %>
      名稱：<%= cart_food.food.title%>
      數量：<%= cart_food.quantity%>
      可領取時間:<%= I18n.l(cart_food.food.pickup_time, formats: :default) %> ～ <%= I18n.l(cart_food.food.pickup_time, formats: :default) %>
      原價：<%= cart_food.food.origin_price%>
      救援價：<%= cart_food.food.discount_price%>
    </li>
  </ul>
<%end%>


<%= form_for(@order) do |form| %>
  
  <%= form.label :recipent, '領取人:' %>
  <%= form.text_field :recipient, value: current_user.name %>
  <%= form.label :phone, '聯絡電話:' %>
  <%= form.text_field :phone, value: current_user.phone %>
  <%= form.label :note, '備註:' %>
  <%= form.text_field :note %>

  <%= form.hidden_field :cart_food_id, value: @cart_foods.ids %>
  <%= form.submit '付款', class: 'btn btn-success btn-lg'  %>
<% end %>











