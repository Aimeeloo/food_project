<!--- 會員登入 Sign In --->
<div class="container-fluid container_sign_in p-0">
  <div class="row no-gutters row_sign">
    <div class="col-lg-4 col-11 col_form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>使用者登入</h2>
      <hr class="colorgraph"> <!---- 我是線 ---->

        <div class="form-group">
            <%= f.label :email, class: "label_form" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_form" %>
        </div>
        <div class="form-group">
            <%= f.label :password,'密碼', class: "label_form" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input_form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, '記住我' %>
          </div>
        <% end %>

      <hr class="colorgraph"> <!---- 我是線 ---->

      <div class="actions">
        <%= f.submit "會員登入", class: 'sign_in' %>
      </div> 
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


