<div class="container">
  <div class="row">
    <div class="col col-lg-6 col-md-12 col-sm-12 col-12 col_form">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h2>Forgot your password?</h2>
        <hr class="colorgraph"> <!---- 我是線 ---->
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email,class: "input_form", autofocus: true, autocomplete: "email" %>
        </div><br>
        <hr class="colorgraph"> <!---- 我是線 ---->
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn_send" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

