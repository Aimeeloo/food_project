<% flash.each do |key, value| %>
  <div class="alert alert-warning <%= key %>">
    <%= value %>
  </div>
<% end %>
<div class="section_orders_show">
  <div class="container-fluid container_orders_show justify-content-center p-0">
    <div class="row no-gutters row_orders_show justify-content-center">

      <div class="col-11 col_orders_show orders_show_img text-center">
        <%= image_tag "dim.jpg" %>
      </div>
      <div class="ccol-11 col_orders_show order_show_title text-center">
        <h1>訂單編號 <span><%= @order.slug.upcase%></span></h1>
      </div>   
      <% @order.order_items.each do |order_item| %>
        <div class="col-12 col_orders_show order_show_item p-4 my-2">
          <p><%= order_item.food.title%>&nbsp;&nbsp;數量：<%= order_item.quantity%></p>
          <p>可領取時間：<%= I18n.l(order_item.food.pickup_time, formats: :default) %> ～ <%= order_item.food.endup_time.strftime("%H:%M") %></p>
        </div>
      <% end %>
      <div class="col-11 order_show_btn text-center">
        <p>總金額 <span class="show_checkout_btn"><%= @total_price %></span> 元</p>  
        <%= link_to "繼續購物", foods_path, class:'btn btn-success btn-lg mr-1' %>
        <%= link_to "全部訂單", orders_path,class:'btn btn-warning btn-lg ml-1' %>
      </div>  
    </div>
  </div>
</div>
<%= render 'shared/frontend/footer' %>
