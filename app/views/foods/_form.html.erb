<form>
<% if food.errors.any? %>
  <ul>
    <% food.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<fieldset>
  <legend>新增食物</legend>
  <div class="form-group">
    <label for="exampleInputFile">File input</label>
    <input type="file" class="form-control-file pic_btn" id="exampleInputFile" aria-describedby="fileHelp">
    <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
  </div>  <!--- 上傳照片 --->
  
  <%= form_for(food) do |form| %>
  <div class="form-group">
    <%= form.label :title, '食物名稱:' %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :picture, '圖片:' %>
    <%= form.text_field :picture %>
  </div>

  <div class="form-group">
    <%= form.label :address, '地址:' %>
    <%= form.text_field :address %>
  </div>

  <div class="form-group">
    <%= form.label :phone, '電話:' %>
    <%= form.text_field :phone %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, ' 數量:' %>
    <%= form.select :quantity, options_for_select(["請選擇數量", [*1..20]].flatten, selected: form.object.quantity), class: 'genForm_dropBox' %>
  </div>

    <div class="form-group">
    <%= form.label :origin_price, '原價:' %>
    <%= form.text_field :origin_price %>
  </div>

  <div class="form-group">
    <%= form.label :discount_price, '救援價:' %>
    <%= form.text_field :discount_price %>
  </div>

  <div class="form-group">
    <%= form.label :pickup_time, '領取時間:' %>
    <%= form.time_field :pickup_time, value: form.object.pickup_time %>
  </div>

  <div class="form-group">
    <%= form.label :endup_time, '結束時間:' %>
    <%= form.time_field :endup_time, value: form.object.endup_time %>
  </div>

    <div class="form-group">
     <%= form.label :description, '描述:' %>
     <%= form.text_area :description %>
   </div>

    <%= form.submit class:'btn btn-danger' %>   <!-- 再來想怎麼在不同頁面改按鈕名稱 -->
    <%= link_to "取消", foods_path, class: 'btn btn-success' %>

  <fieldset class="form-group">
  <% end %>
  <!-- radio按鈕先保留 -->
  </fieldset>
  <fieldset>
  <legend>Custom forms</legend>
    <div class="form-group">
      <div class="custom-control custom-radio">
        <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked="">
        <label class="custom-control-label" for="customRadio1">Toggle this custom radio</label>
      </div>
      <div class="custom-control custom-radio">
        <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
        <label class="custom-control-label" for="customRadio2">Or toggle this other custom radio</label>
      </div>
    </div>
    <div class="form-group">
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="customSwitch1" checked="">
        <label class="custom-control-label" for="customSwitch1">Toggle this switch element</label>
      </div>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" disabled="" id="customSwitch2">
        <label class="custom-control-label" for="customSwitch2">Disabled switch element</label>
      </div>
    </div>
  </fieldset>
</form>
